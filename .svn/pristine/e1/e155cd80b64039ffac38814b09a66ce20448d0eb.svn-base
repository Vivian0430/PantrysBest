        .description{
          color: #390C20;
          padding-top: 10px;
          padding-bottom: 20px;
        }
        .tag-goods{
          padding: 3px;
          border: 1px solid #390c20;
          border-radius: 4px;
          margin: 3px;
          cursor: pointer;
          color: #390c20;
          display: inline-block;
          font-size: 12px;
        }
        .grayborder{
          background-color: #cccccc;
          height: 1px;
