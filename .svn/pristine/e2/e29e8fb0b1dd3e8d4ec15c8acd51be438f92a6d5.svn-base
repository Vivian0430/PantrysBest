@media (max-width: 797px) {
  .goods-fixed-bottom {
    z-index: 1050;
  }
  .goods-fixed-bottom .cart-icon-dom {
    padding: 0px;
    padding-top: 10px;
    text-align: center;
    background: #fff;
    height: 50px;
  }
  .goods-fixed-bottom .cart-icon-dom .cart-icon {
    font-size: 16pt;
    color: #390c20;
    float: left;
    margin-left: 15px;
    cursor: pointer;
    padding: 5px;
  }
  .goods-fixed-bottom .btn {
    border-radius: 0px;
    font-size: 16px;
  }
  .goods-fixed-bottom .pantry-button {
    height: 50px;
    line-height: 50px;
    text-align: center;
    width: 100%;
    color: white;
  }
}
@media (min-width: 798px) {
  #product-container {
    margin-top: 71px;
  }
  #product-container .swiper-container {
    margin: 0 auto;
    position: relative;
    overflow: hidden;
    z-index: 1;
    padding-top: 0;
  }
  #product-container .swiper-container .swiper-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    display: flex;
    box-sizing: content-box;
  }
  #product-container .swiper-container .swiper-wrapper .swiper-slide {
    width: 101%;
    height: 100%;
  }
  #product-container .product-info-container {
    padding-right: 15px;
    padding-left: 15px;
  }
  #product-container .product-info-container .row {
    padding-right: -15px;
    padding-left: -15px;
  }
  #product-container .product-info-container .row .description {
    color: #390C20;
    padding-top: 10px;
    padding-bottom: 20px;
  }
  #product-container .product-info-container .row .tag-goods {
    padding: 3px;
    border: 1px solid #390c20;
    border-radius: 4px;
    margin: 3px;
    cursor: pointer;
    color: #390c20;
    display: inline-block;
    font-size: 12px;
  }
  #product-container .product-info-container .row .grayborder {
    background-color: #cccccc;
    height: 1px;
    margin-top: 10px;
    margin-bottom: 10px;
  }
}
